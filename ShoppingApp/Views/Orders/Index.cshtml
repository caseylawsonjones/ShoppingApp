@model ShoppingApp.Models.CodeFirst.Order

@{
    ViewBag.Title = "Order Completed";
}

<h1>Your Order Has Been Submitted Successfully!</h1>
<h5>You will receive your order in 3-6 weeks.</h5>

<div class="container" style="">
    @*SHIPPING ADDRESS*@
    <div class="row" style="text-align: left; border-top:groove; ">
        <h4>Your order was shipped to this address:</h4>
        <h5>@Model.Address</h5>
        <h5>@Model.City @Model.State @Model.ZipCode</h5>
    </div>

    @*PAYMENT METHOD*@
    <div class="row" style="text-align: left; border-top:groove; ">
        <h4>The payment was billed to your @ViewBag.CardBrand</h4>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "Items")
</div>
<hr />
<hr />
<hr />